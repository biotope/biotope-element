<!--
  Example of html template file for Biotope Element
-->

<h1>H1 <% 'Headline' %></h1>
<p><% this.props.greeting %></p>

<% if this.props.showSlot %>
  <slot />
<% else %>
  <p>
    Here's some nice js processing instead of the slot:
    <% '>' + JSON.stringify({ hello: 'world' }) + '<' %>
  </p>
<% endif %>

<h2><pre>if</pre> and <pre>for</pre> nesting</h2>
<% if this.numbersArray/* works like plain js! */.length %>
  <ul>
    <li>click the other items!</li>
    <% for item in this.numbersArray %>
      <li id=<% item %> onclick=<% this.handleClick(item) %>>
        Number: <% item %> =>
        <% if item % 2 !== 0 %>
          <span>odd</span>
        <% else %>
          <span>
            even:
            <% for number in this.constructor.getCustomArray(item) %>
              <span><% number %></span>
            <% endfor %>
          </span>
        <% endif %>
      </li>
    <% endfor %>
  </ul>
<% endif %>

<% log 'logging works like in js - ' + this.numbersArray.toString() %>

<% console.log('regular instructions work too!') %>

<button onclick=<% this.handleClick('You clicked the button!') %>>Click me!</button>

<style>
  pre {
    display: inline;
  }
</style>
